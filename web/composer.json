{
    "name": "the-guys/leka",
    "description": "Teacher Calendar App",
    "authors": [
        {
            "name": "Christian Ziermann",
            "email": "cziermann@mailbox.org"
        }
    ],
    "require": {
        "twig/twig": "^1.24",
        "php": ">=5.5.9",
        "pimple/pimple": "^3.0",
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
